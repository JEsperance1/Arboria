version: 0.2

phases:
  install:
    commands:
      - python -m pip install --upgrade pip
      - python -m pip install -r requirements.txt
      - python -m pip install pyinstaller pytest pygame
  pre_build:
    commands:
      - python -m pytest tests/
  build:
    commands:
    - python -m PyInstaller --onefile --add-data "assets;assets" --add-data "src;src" main.py
    - dir dist

artifacts:
  files:
    - dist/main.exe
  base-directory: .
